<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    tools:context=".Index">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:fontFamily="serif"
            android:text="@string/slogan"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="center"
                app:srcCompat="@drawable/asica_removebg_preview"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/apeajal2_1_removebg_preview"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_itcg"
                />
            <ImageView
                android:layout_marginLeft="7dp"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo_aneberries_retina"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_gravity="center"
                app:srcCompat="@drawable/descarga_removebg_preview"
                />
        </GridLayout>
    </LinearLayout>



</ScrollView>