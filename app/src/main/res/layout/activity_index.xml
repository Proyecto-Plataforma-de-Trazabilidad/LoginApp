<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Index"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/apejal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/apeajal2"
                />
            <ImageView
                android:id="@+id/asica"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_alignLeft="@+id/apejal"
                android:layout_alignParentRight="true"
                android:layout_gravity="top"
                app:srcCompat="@drawable/asica" />
            <ImageView
                android:id="@+id/Amocali"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/fidaixbm_400x400"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnmapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_below="@+id/apejal"
                android:backgroundTint="#558B2F"
                android:text="@string/btnMap" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconscat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnmapa"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/btnconm" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconscatxm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconscat"
                android:layout_centerHorizontal="true"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/btnconxm" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconscatxe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconscatxm"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/btnconxe" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconscatxe"
                android:layout_centerHorizontal="true"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/con1" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsCM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconsC"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/con2" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconsCM"
                android:layout_centerHorizontal="true"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/con3" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsDesM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconsDes"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:layout_row="3"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/con4" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsDis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconsDesM"
                android:layout_centerHorizontal="true"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/con5" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsDisM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconsDis"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:layout_row="4"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/con6" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsPriv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconsDisM"
                android:layout_centerHorizontal="true"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/con7" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsPrivM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnconsDisM"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:layout_row="5"
                android:layout_marginTop="25dp"
                android:backgroundTint="#558B2F"
                android:text="@string/con8" />

        </GridLayout>
    </LinearLayout>
</ScrollView>