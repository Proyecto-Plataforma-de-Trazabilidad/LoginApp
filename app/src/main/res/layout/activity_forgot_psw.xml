<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Forgot_passw.ForgotPSW"
    android:background="@color/Verdeapejal">

    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="600sp"
       android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/apejal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/apeajal2" />
            <ImageView
                android:id="@+id/asica"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_alignLeft="@+id/apejal"
                android:layout_alignParentRight="true"
                android:layout_gravity="top"
                app:srcCompat="@drawable/asica" />
            <ImageView
                android:id="@+id/Amocali"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/fidaixbm_400x400"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/letrero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Restablece tu contraseÃ±a"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mailrecupera"
            android:layout_below="@+id/letrero"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="10sp"
            android:background="#90FFFFFF"
            android:drawableStart="@drawable/outline_assignment_ind_24"
            android:layout_margin="15dp"
            android:hint="Ingresa tu correo"
            android:drawablePadding="20sp"
            android:backgroundTint="@color/graduado"
            android:inputType="textEmailAddress"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnrecupera"
            android:layout_below="@+id/mailrecupera"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Verdeapejal"
            android:layout_gravity="center"
            android:text="Recuperar"/>
    </LinearLayout>

</LinearLayout>