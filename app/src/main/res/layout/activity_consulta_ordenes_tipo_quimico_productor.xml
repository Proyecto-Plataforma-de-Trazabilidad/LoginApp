<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Indexs.Movimientos.Productores.Ordenes.ConsultaOrdenesTipoQuimicoProductor">
        <LinearLayout
            android:id="@+id/layoutbase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/apejal"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/apeajal2" />
                <ImageView
                    android:id="@+id/asica"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_alignLeft="@+id/apejal"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/asica" />
                <ImageView
                    android:id="@+id/Amocali"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/fidaixbm_400x400" />

            </LinearLayout>

            <TextView
                android:id="@+id/tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consulta Por Periodo Ordenes "
                android:textStyle="bold"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/f1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona Tipo Quimico:"
                android:textColor="@color/black"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tit" />
            <Spinner
                android:id="@+id/cbomunicipiocat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_footer"
                android:foregroundTint="@android:color/holo_green_dark"
                android:popupBackground="@color/white"
                android:textAlignment="center"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/encabezado1"
                        android:text="Dato 1"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/titd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/encabezado1"
                        android:text="Dato 2"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/titla"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/encabezado1"
                        android:text="Dato 3"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/titlo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/encabezado1"
                        android:text="Dato 4"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/tablaGC"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-5dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnreg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/Regresar"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:backgroundTint="@color/Verdeapejal"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnconsu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/Consultar"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/Verdeapejal"
                    android:layout_centerHorizontal="true"
                    />

            </GridLayout>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>