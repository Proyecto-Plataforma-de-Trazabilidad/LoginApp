<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpinnerMunicipio"
    android:background="@color/purple_200">
    <LinearLayout
        android:id="@+id/layoutnay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/purple_200">

        <TextView
            android:id="@+id/tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consulta por municipio"
            android:textStyle="bold"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona un municipio:"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tit" />

        <Spinner
            android:id="@+id/cbomunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tit" />

        <TableLayout
            android:id="@+id/tablacxe"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnregresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/Regresar"
                android:layout_column="0"
                android:layout_row="1"
                android:backgroundTint="#558B2F"
                android:layout_centerHorizontal="true"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnconsultar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/Consultar"
                android:layout_column="2"
                android:layout_row="1"
                android:backgroundTint="#558B2F"
                android:layout_centerHorizontal="true"
                />

        </GridLayout>
    </LinearLayout>
</ScrollView>