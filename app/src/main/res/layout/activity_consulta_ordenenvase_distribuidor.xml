<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Indexs.Movimientos.Distribuidor.Ordenes.consultaOrdenEnvaseDistribuidor">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/apejal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/apeajal2"
                    />
                <ImageView
                    android:id="@+id/asica"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_alignLeft="@+id/apejal"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top"
                    app:srcCompat="@drawable/asica" />
                <ImageView
                    android:id="@+id/Amocali"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/fidaixbm_400x400"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consulta Por Envase Ordenes "
                android:textStyle="bold"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/f1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona Tipo Envase:"
                android:textColor="@color/black"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tit" />
            <Spinner
                android:id="@+id/cbomunicipiocat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_footer"
                android:foregroundTint="@android:color/holo_green_dark"
                android:popupBackground="@color/white"
                android:textAlignment="center"
                />


            <TableLayout
                android:id="@+id/tablaGC"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-5dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnreg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/Regresar"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:backgroundTint="@color/Verdeapejal"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    />


            </GridLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>