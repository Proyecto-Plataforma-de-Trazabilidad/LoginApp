<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="350dp"
            android:layout_height="630dp"
            android:layout_marginTop="30dp"
            android:background="#99FFFFFF"

            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="7dp"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/asica_removebg_preview"
                        />
                    <ImageView
                      android:layout_marginLeft="7dp"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/apeajal2_1_removebg_preview"
                        />
                    <ImageView
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/logo_itcg"
                        />
                    <ImageView
                        android:layout_marginLeft="7dp"
                        android:layout_width="83dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/logo_aneberries_retina"
                        />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/descarga_removebg_preview"
                        />
                </TableRow>

            </RelativeLayout>

            <TextView
                android:id="@+id/singtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/sign"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="serif"
                android:text="@string/slogan"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/imagen1" />

            <EditText
                android:id="@+id/username"
                android:layout_width="310sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slogan"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:background="#99FFFFFF"
                android:drawableStart="@drawable/outline_assignment_ind_24"
                android:drawablePadding="20sp"
                android:hint="@string/username"
                android:inputType="textEmailAddress"
                android:padding="20sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/passname"
                android:layout_width="310sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:background="#99FFFFFF"
                android:drawableStart="@drawable/outline_https_24"
                android:drawablePadding="20sp"
                android:hint="@string/passname"
                android:inputType="textPassword"
                android:padding="20sp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonacceder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passname"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/Verdeapejal"
                android:text="@string/acceder"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonacceder"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:text="@string/forgot"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
