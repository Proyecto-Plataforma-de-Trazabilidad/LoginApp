<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/hd_wallpaper_avocado_green">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="350sp"
        android:layout_height="600sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/linearLayout1"
        android:background="#70FFFFFF">

        <TextView
            android:id="@+id/singtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="50dp"
            />

        <EditText
            android:id="@+id/username"
            android:layout_width="310sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/singtext"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/username"
            android:textColorHint="@color/black"
            android:background="#90FFFFFF"
            android:drawableStart="@drawable/outline_assignment_ind_24"
            android:inputType="textEmailAddress"
            android:padding="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:drawablePadding="20sp"
            />

        <EditText
            android:id="@+id/passname"
            android:layout_width="310sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/passname"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:padding="20sp"
            android:background="#90FFFFFF"
            android:drawableStart="@drawable/outline_https_24"
            android:drawablePadding="20sp"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"

            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonacceder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/passname"
            android:text="@string/acceder"
            android:backgroundTint="#558B2F"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonacceder"
            android:layout_marginTop="25dp"
            android:text="@string/forgot"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</RelativeLayout>